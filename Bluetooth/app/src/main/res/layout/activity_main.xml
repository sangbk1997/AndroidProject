<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sangbk.bluetooth.MainActivity">

     <LinearLayout
         android:orientation="vertical"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent">
         <TextView
             android:text="Nguyễn Bình Sang"
             android:id="@+id/text"
             android:textColor="#F23"
             android:layout_marginTop="50dp"
             android:textSize="30px"
             android:gravity="center"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" />
         <Button
             android:id="@+id/showDevices"
             android:text="SA_Devices"
             android:textSize="30px"
             android:textStyle="bold"
             android:layout_marginTop="20dp"
             android:textColor="#F92"
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <ListView
             android:id="@+id/list"
             android:layout_gravity="center_horizontal"
             android:layout_width="fill_parent"
             android:layout_height="300dp"></ListView>
     </LinearLayout>

</android.support.constraint.ConstraintLayout>
