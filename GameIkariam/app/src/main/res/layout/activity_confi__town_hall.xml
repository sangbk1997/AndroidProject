                        android:textSize="30px" />
                </LinearLayout>

                <EditText
                    android:id="@+id/count_Ram"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/balloon_bombardier"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="Balloon_Bombardier"
                        android:textColor="#780"
                        android:textSize="30px" />
                </LinearLayout>

                <EditText
                    android:id="@+id/count_Balloon"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/gyrocopter"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="Gyrocopter"
                        android:textColor="#780"
                        android:textSize="30px" />
                </LinearLayout>

                <EditText
                    android:id="@+id/count_Gyrocopter"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cook"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="Cook"
                        android:textColor="#780"
                        android:textSize="30px" />
                </LinearLayout>

                <EditText
                    android:id="@+id/count_Cook"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/doctor"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="Doctor"
                        android:textColor="#780"
                        android:textSize="30px" />
                </LinearLayout>

                <EditText
                    android:id="@+id/count_Doctor"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/barbarian_axe_swinger"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="Barbarian_Axe Swinger"
                        android:textColor="#780"
                        android:textSize="30px" />
                </LinearLayout>

                <EditText
                    android:id="@+id/count_Barbarian_Axe"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save"
                    android:textColor="#234"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textColor="#234"
                    android:textSize="40px"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
