<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sangbk.layout2.MainActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TableRow>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Button 1"
                android:background="#789"/>
        </TableRow>
       <TableRow>
           <TableLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:stretchColumns="*">
               <TableRow>

                   <Button
                       android:id="@+id/button"
                       android:layout_column="1"
                       android:background="#996"
                       android:text="Button 2" />

                   <Button android:text="Button 3"
                       android:background="#113"
                       android:layout_column="2"/>
                   <Button android:text="Button 4"
                       android:background="#3352"
                       android:layout_column="3"/>
               </TableRow>

           </TableLayout>
       </TableRow>
        <TableRow>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <TableRow>
                    <Button
                        android:layout_column="1"
                        android:text="Button 5"
                        android:background="#8761"
                        />
                    <Button
                        android:layout_column="2"
                        android:text="Button 6"
                        android:background="#461"
                        />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>
    </android.support.constraint.ConstraintLayout>


