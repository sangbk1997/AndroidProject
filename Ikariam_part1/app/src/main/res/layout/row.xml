<?xml version="1.0"?>
<LinearLayout android:padding="4dip" android:orientation="horizontal" android:layout_height="match_parent" android:layout_width="match_parent" android:background="#77F" xmlns:android="http://schemas.android.com/apk/res/android">
   <TableLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
       <TableRow>
           <ImageView
               android:id="@+id/imgNV"
               android:layout_marginLeft="10dp"
               android:layout_width="70dp"
               android:layout_weight="1"
               android:layout_height="100dp"
               />
           <LinearLayout
               android:orientation="vertical"
               android:layout_weight="1">
               <TextView
                   android:text="Tên : "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:text="Máu : "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:text="Giáp : "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:text="Sát Thương : "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:text="Độ chính xác : "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <LinearLayout
               android:orientation="vertical"
               android:layout_weight="1">
               <TextView
                   android:id="@+id/ten"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:textStyle="bold"
                   />
               <TextView
                   android:id="@+id/mau"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   />
               <TextView
                   android:id="@+id/giap"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   />
               <TextView
                   android:id="@+id/satthuong"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:ellipsize="end"
                   />
               <TextView
                   android:id="@+id/sodan"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:ellipsize="end"
                   />
           </LinearLayout>
       </TableRow>
   </TableLayout>
</LinearLayout>