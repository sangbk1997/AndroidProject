<?xml version="1.0" encoding="utf-8"?>
<TabHost android:id="@android:id/tabhost"
    android:layout_height="495dp"
    android:layout_width="368dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout android:id="@android:id/tabcontent" android:layout_height="match_parent" android:layout_width="match_parent">
            <ListView android:id="@+id/listNV" android:layout_height="match_parent" android:layout_width="match_parent"/>
            <TableLayout android:id="@+id/details" android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingTop="4dip" android:shrinkColumns="1" android:stretchColumns="1"
                android:background="#F5ECCE"
                android:layout_marginTop="30dp"
                >
                <TableRow>
                    <TextView android:text="Chọn Nhân Vật :"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="#F4F"/>
                        />
                    <AutoCompleteTextView
                        android:id="@+id/auto"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:textColor="#F4F"/>
                </TableRow>
                <TableRow>
                    <TextView android:text="Máu Nhân Vật:"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="#F4F"/>
                    <EditText android:id="@+id/mauNV"
                        android:textColor="#F4F"
                        android:layout_weight="2"
                        />

                </TableRow>
                <TableRow>
                    <TextView android:text="Giáp :"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="#F4F"/>
                    <EditText android:id="@+id/giapNV"
                        android:textColor="#F4F"
                        android:layout_weight="2"

                        />

                </TableRow>
                <TableRow>
                    <TextView android:text="Sát Thương :"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="#F4F"/>
                    <EditText android:id="@+id/satthuongNV"
                        android:textColor="#F4F"
                        android:layout_weight="2"

                        />

                </TableRow>
                <TableRow>
                <TextView android:text="Độ chính xác :"
                    android:layout_marginLeft="10dp"
                    android:textColor="#F4F"/>
                <EditText android:id="@+id/sodanNV"
                    android:textColor="#F4F"
                    android:layout_weight="2"
                    />
                </TableRow>
                <Button
                    android:text="Save"
                    android:id="@+id/save"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:textColor="#F23"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    />
                <Button
                    android:text="Cancel"
                    android:id="@+id/cancel"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:textColor="#F23"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    />
            </TableLayout>
        </FrameLayout>
    </LinearLayout>
</TabHost>
