<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sangbk.myselfintentdemo.MainActivity">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1"
      >
        <TableRow   android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp">
            <TextView
                android:id="@+id/text"
                android:text="Thông tin cơ bản : "
                android:textColor="#F51"
                android:textStyle="bold"
                android:textSize="30px"
                android:layout_column="1"/>
        </TableRow>
        <TableRow  android:layout_marginLeft="20dp">
            <TextView
                android:text="Name :"
                android:textColor="#F51"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/name"
                android:layout_span="6"
                />
        </TableRow  >
        <TableRow android:layout_marginLeft="20dp">
            <TextView
                android:text="Your Age :"
                android:textColor="#F51"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/age"
                android:layout_span="6"/>
        </TableRow>
        <TableRow  android:layout_marginLeft="20dp">
            <TextView
                android:text="Your Province :"
                android:textColor="#F51"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/yourProvince"
                android:layout_span="6"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_marginTop="30dp"
                android:id="@+id/button"
                android:text="Welcome"
                android:textSize="50px"
                android:textColor="#685699"
                android:layout_column="1"
                android:layout_width="wrap_content"/>
        </TableRow>
    </TableLayout>


</android.support.constraint.ConstraintLayout>
